spawn(function()
 while wait() do
  if getgenv().AutoStats and getgenv().AutoStatsDefense then
    local args = {
        [1] = "Defense",
        [3] = 1
    }
    
    game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("stats"):FireServer(unpack(args))
  end
 end
end)
